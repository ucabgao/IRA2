    "requireConfig" : {
        "paths": {
            "{d3}": "${components-path:bower_components}/d3",
            "{nvd3}": "${components-path:bower_components}/nvd3/build"
        },

        "shim" : {
              "{d3}/d3": {
                   "exports": "d3"
              },
              "{nvd3}/nv.d3": {
                  "deps": ["{d3}/d3"],
                  "exports": "nv"
              }
          }
      }
