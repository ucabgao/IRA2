{
    "id":"w20-dataviz",
    "name":"W20 data visualization",
    "description":"W20 data visualization components (charts, ...)",

    "modules" : {
        "bullet" : {
            "path" : "{w20-dataviz}/modules/charts/bullet",
            "configSchema": {
                "title": "Bullet chart configuration",
                "type": "object",
                "additionalProperties": false
            }
        },
         "cumulativeline" : {
